---
const { episode, number } = Astro.props;
const { title, featuring, channels } = episode;
import people from '../data/people';
import BadgeManager from './badges/BadgeManager.astro';
---
<style>
  section {
    width: 100%;
    border: 1px solid #CCC;
    padding: 20px 24px;
    border-radius: 8px;
    display: grid;
    gap: 24px;
    transition: scale 200ms var(--ease-elastic-in-out-1);

    & > a:first-of-type {
      font-weight: 800;
      font-size: 1.5rem;
    }

    &:hover {
      scale: 1.025;
    }

    & div:nth-child(2) {
      display: flex;
      flex-direction: column;
      gap: 8px;

      & span {
        color: #DDD;
        text-transform: uppercase;
        font-weight: 800;
        letter-spacing: 0.64px;
      }

      ul {
        display: flex;
        gap: 4px;

        & a {
          display: contents;
        }

        & li img {
          border-radius: 100%;

          &:hover {
            scale: 1.25;
          }
        }
      }
    }

    & div:nth-child(3) {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;

      & ul {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        align-items: center;

        & li {
          height: 46px;
        }
      }

      & div {
        color: #DDD;
        text-transform: uppercase;
        font-weight: 800;
        font-size: 3rem;
      }
    }
  }
</style>
<section>
  <a href={channels.youtube} rel="noopener" target="_blank">{title}</a>

  <div>
    <span>Featuring</span>
    <ul>
      {featuring.map(f => {
        return (
          <li>
            <a href={people[f].twitter} rel="noopener" target="_blank">
              <img height="32" width="32" src={people[f].photoUrl} alt={people[f].name} />
            </a>
          </li>
        )
      })}
    </ul>
  </div>

  <div>
    <ul>
      {Object.keys(channels).map(c => {
        return (
          <li>
            <BadgeManager channel={c} href={channels[c]} />
          </li>
        )
      })}
    </ul>
    <div>#{number}</div>
  </div>

</section>