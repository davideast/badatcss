import EpisodeCard from "./EpisodeCard.astro";

const episodes = [
  {
    title: "What CSS is Jason Lengstorf bad at?",
    date: new Date("2022-11-17"),
    featuring: ["david", "adam", "jason"],
    channels: {
      youtube: "https://youtu.be/BYaU3ftTXfQ",
      spotify: "https://open.spotify.com/episode/5k8sEqKp3mXAWwhepgyjqR",
