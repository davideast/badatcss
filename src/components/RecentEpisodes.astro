---

<style>
  section {
    display: flex;
    flex-direction: column;
    gap: 104px;
    align-items: center;
    justify-content: center;
  }

  ul {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 32px;

    & li {
      display: contents;
    }
  }
</style>
<section>
  <div>
    <IconHeading
      iconUrl={mic.src}
      iconAlt="A microphone icon"
      heading="Recent Episodes"
      height={71}
      width={48}
    />
  </div>
  <ul>
    {
      episodes.map((episode, index) => (
        <li>
          <click-card>
            <EpisodeCard episode={episode} number={episodes.length - index} />
          </click-card>
        </li>
      ))
    }
  </ul>
</section>
