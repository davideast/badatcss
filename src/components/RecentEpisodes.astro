---

<style>
  section {
    display: flex;
    flex-direction: column;
    gap: 104px;
    place-items: center;
  }

  ul {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 32px;

    & li {
      display: contents;
    }
  }
</style>
<section>
  <div>
    <IconHeading
      iconUrl="/microphone.png"
      iconAlt="A microphone icon"
      heading="Recent Episodes"
    />
  </div>
  <ul>
    {
      episodes.map((episode, index) => (
        <li>
          <EpisodeCard episode={episode} number={index + 1} />
        </li>
      ))
    }
  </ul>
</section>
